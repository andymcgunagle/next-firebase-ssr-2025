{
  "name": "next-firebase-ssr",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build --turbopack",
    "deploy:firebase": "sh ./scripts/firebase/deploy-firebase.sh",
    "deploy:firebase:dry-run": "sh ./scripts/firebase/deploy-firebase-dry-run.sh",
    "deploy:functions": "sh ./scripts/firebase/deploy-functions.sh",
    "deploy:vercel": "sh ./scripts/deploy-vercel.sh",
    "dev": "git branch && next dev --turbopack",
    "find-unused-dependencies": "npx depcheck",
    "lint": "eslint",
    "lint:fix": "npx eslint . --fix",
    "prettier:check": "npx prettier --check \"**/*.{js,jsx,ts,tsx,css,scss}\"",
    "prettier:write": "npx prettier --write \"**/*.{js,jsx,ts,tsx,css,scss}\"",
    "pull:install": "sh ./scripts/pull-and-install.sh",
    "push:staging": "sh ./scripts/push-staging.sh",
    "refresh-packages": "rm -rf node_modules package-lock.json && npm install",
    "save": "sh ./scripts/save.sh",
    "save:default-message": "sh ./scripts/save.sh --default-message",
    "start": "next start",
    "test": "vitest",
    "test:watch": "vitest watch",
    "ts:watch": "tsc --watch --noEmit --incremental --pretty"
  },
  "dependencies": {
    "firebase": "^12.2.1",
    "firebase-admin": "^13.5.0",
    "next": "15.5.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "server-only": "^0.0.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
