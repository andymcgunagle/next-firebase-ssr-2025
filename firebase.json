{
  "firestore": {
    "rules": "firebase/firestore.rules",
    "indexes": "firebase/firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "*.local",
        ".git",
        "firebase-debug.*.log",
        "firebase-debug.log",
        "node_modules"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "storage": {
    "rules": "firebase/storage.rules"
  },
  "database": {
    "rules": "firebase/database.rules.json"
  }
}
